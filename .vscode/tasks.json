{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "dependsOn": [
        "Build TypeScript",
        "Minify"
      ]
    },
    {
      "label": "Build TypeScript",
      "type": "shell",
      "command": "./node_modules/.bin/tsc",
      "args": [
        "-w",
        "-p",
        "./src"
      ]
    },
    {
      "label": "Minify",
      "type": "shell",
      "command": "./node_modules/.bin/watch \"uglifyjs --compress --mangle --output ./lib/hp.min.js -- ./lib/hp.js\"",
      "args": [
        "./lib",
        "--interval=1"
      ]
    }
  ]
}